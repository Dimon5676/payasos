@model ICollection<Payasos.Core.Entities.PromotionRequest>

@{
    ViewData["Title"] = "Запросы на повышение";
}

<h1>Заявки на повышение</h1>
@foreach (var request in Model)
{
    <div style="border-top: 1px black solid">
        <a asp-action="SeeRequest" asp-route-id="@request.Id">@request.User.LastNameInitials</a>
        <h4>@(request.User.Role?.Name ?? "не указано") ==> @(request.RoleWanted.Name)</h4>
    </div>
}