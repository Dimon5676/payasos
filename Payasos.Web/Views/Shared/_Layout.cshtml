<!DOCTYPE html>
<html lang="ru">
<head>
<script src="https://cdn.tailwindcss.com"></script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    @await RenderSectionAsync("Styles", required: false)
    
</head>
<body>
<header class="sticky top-0 z-50"> 
    <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid  text-2xl header__container">
            <a class="navbar-brand text-white ml-3 header__logo" asp-area="" asp-controller="Home" asp-action="Index" ><img src="logo.png" alt="logo" asp-append-version="true"></a>
            <div class="flex items-center justify-center space-x-10 text-2xl navbar_btn">
                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                <a class="nav-link text-white" asp-area="" asp-controller="Lk" asp-action="Organisation">Личный кабинет</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-white  border border-green-300 rounded-md mr-20" asp-area="" asp-controller="User" asp-action="Logout">Выйти</a>
                }
                else
                {
                    <a class="nav-link text-white mr-20" asp-area="" asp-controller="User" asp-action="Login">Войти</a>
                    <a class="nav-link text-white ml-20" asp-area="" asp-controller="User" asp-action="RegisterOrganisation">Регистрация</a>   
                }
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    </header>

@RenderBody()


<footer class="border-top footer text-muted">
    <div class="container text-center">
        &copy; @DateTime.Now.Year - Payasos - <a  asp-area="" asp-controller="Home" asp-action="License">Лицензия</a>
    </div>
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    html{
        font-family: Comfortaa, sans-serif;
        font-size: 16px;
        padding-bottom: 32px;
        }
        footer{
        display: block;
        position: fixed; 
        bottom: 0; 
        background-color: rgb(78,171,116);
                color: #262626;
                width: 100vw;
               
        }
        
        .container-fluid{
        background-color: rgb(78,171,116);
                        color: #262626;
                        width: 100vw;
                        height: 80px;
        }
</style>