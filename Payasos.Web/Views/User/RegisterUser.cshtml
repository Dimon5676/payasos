@model Payasos.Core.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="min-h-screen flex items-center justify-center py-6 bg-green-100">
<div class="bg-green-400 p-8 rounded-lg shadow-3x2 w-1/3 flex items-center justify-center">
    <form method="post" asp-action="RegisterUserPost" class="space-y-3 ">
        
        <h2 class="text-3x1 font-bold mt-2 text-neutral-800 md:text-center">Создайте свой аккаунт</h2>
        <div>
            <label>Пригласительный код</label>
            <input asp-for="Code" type="text" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Пригласительный код">
            <span asp-validation-for="Code" class="text-red-500"></span>
        </div>
        
        <div>
            <label>Фамилия</label>
            <input asp-for="LastName" type="text" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Фамилия">
        <span asp-validation-for="LastName" class="text-red-500" ></span>
        </div>
        <div>
            <label>Имя</label>
            <input asp-for="FirstName" type="text" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Имя">
            <span asp-validation-for="FirstName" class="text-red-500"></span>
        </div>
        <div>
            <label>Отчество</label>
            <input asp-for="SecondName" type="text" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Отчество">
            <span asp-validation-for="SecondName" class="text-red-500"></span>
        </div>
        <div>
            <label>Email</label>
            <input asp-for="Email" type="email" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Email адрес">
            <span asp-validation-for="Email" class="text-red-500"></span>
        </div>
        <div>
            <label>Пароль</label>
            <input asp-for="Password" type="password" class="border border-green-500 py-1 px-4 w-full rounded-md" placeholder="Пароль">
            <span asp-validation-for="Password" class="text-red-500"></span>
        </div>
        <div asp-validation-summary="All" class="text-red-500"></div>
        <div>
            <input id="reg_btn" type="submit" class="py-1 px-4 w-full rounded-md bg-sky-600 text-neutral-800" value="Регистрация">
        </div>
        <br/>
        <label><input id="license" class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-500
 checked:border-green-600 focus:outline-none transition duration-200 mt-1 align-top
 bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="checkbox" value="Value">Я принимаю лицензионное соглашение</label>
    <script type="text/javascript" language="JavaScript">
                document.getElementById("reg_btn").addEventListener("click", (ev => {
                    if (document.getElementById("license").checked) return
                    ev.preventDefault()
                    
                    
                    alert("Вы должны принять условия лицензионного сооглашения")
                    
                }))
                </script></form>
</div>
</div>    