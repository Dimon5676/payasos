@model Payasos.Core.ViewModels.RegisterOrganisationViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center py-6 bg-green-100">
<div class="bg-blue-400 p-8 rounded-lg shadow-3x2 w-1/3 flex items-center justify-center">
    <form asp-action="RegisterOrganisationPost" method="post" class="space-y-3">
        
        <h2 class="text-3x1 font-bold text-blue-100 md:text-center">Добавьте свою организацию</h2>
        <div>
            <label class="text-blue-100">Название организации</label>
            <input asp-for="OrganisationName" type="text" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Название огранизации">
            <span asp-validation-for="OrganisationName" class="text-red-500"></span>
        </div>
        
        <div>
            <label class="text-blue-100">Фамилия</label>
            <input asp-for="FirstName" type="text" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Фамилия">
            <span asp-validation-for="FirstName" class="text-red-500"></span>
        </div>
        <div>
            <label class="text-blue-100">Имя</label>
            <input asp-for="LastName" type="text" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Имя">
            <span asp-validation-for="LastName" class="text-red-500"></span>
        </div>
        <div>
            <label>Категория деятельности</label>
            <input asp-for="SecondName" type="text" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Отчество">
            <span asp-validation-for="SecondName" class="text-red-500"></span>
        </div>
        <div>
            <label class="text-blue-100">Email</label>
            <input asp-for="Email" type="email" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Email адрес">
            <span asp-validation-for="Email" class="text-red-500"></span>
        </div>
        <div>
            <label class="text-blue-100">Пароль</label>
            <input asp-for="Password" type="password" class="border border-blue-600 py-1 px-4 w-full rounded-md" placeholder="Пароль">
            <span asp-validation-for="Password" class="text-red-500"></span>
        </div>
        <div>
            <input id="reg_btn" type="submit" class="py-1 px-4 w-full rounded-md bg-sky-600 text-blue-100" value="Регистрация">
        </div>
        <div>
            <a asp-action="RegisterUser" class="py-1 px-4  text-sky-100">Есть код?</a>
                </div>
        <br/>
        <label class="text-blue-100"><input  id="license" class="form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-green-500
 checked:border-green-600 focus:outline-none transition duration-200 mt-1 align-top
 bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="checkbox" name="license_agree" value="Value">Я принимаю лицензионное соглашение
            <script type="text/javascript" language="JavaScript">
            document.getElementById("reg_btn").addEventListener("click", (ev => {
                if (document.getElementById("license").checked) return
                ev.preventDefault()
                
                
                alert("Вы должны принять условия лицензионного сооглашения")
                
            }))
            </script></label>
    </form>
    <style>
        .input-validation-error{
        border: red 1px solid;
        }
    </style>
</div>
</div>    

   